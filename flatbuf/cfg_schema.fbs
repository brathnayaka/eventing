namespace flatbuf.cfg;

table Config {
  appCode:string;
  appName:string;
  depCfg:DepCfg;
  functionID:uint;
  functionInstanceID:string;
  id:uint;
  usingTimer:bool;
  srcMutationEnabled:bool;
}

table DepCfg {
  buckets:[Bucket];
  metadataBucket:string;
  sourceBucket:string;
  curl:[Curl];
}

table Bucket {
  bucketName:string;
  alias:string;
  access:string;
}

table Curl {
  hostname:string;
  value:string;
  authType:string;
  username:string;
  password:string;
  bearerKey:string;
  cookies:string;
}

root_type Config;
