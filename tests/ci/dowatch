#!/bin/bash

source ~/.cienv

if [ "$WORKSPACE" = "" ]; then
  echo 'WORKSPACE not set'
  exit 2
fi

if [ "$CIBOT" = "true" ]; then
   sleep 60
   exit 0
fi

for i in {1..240}; do
  cd $WORKSPACE
  sleep 60
  current="`git ls-remote ssh://github.com/couchbase/eventing $BRANCH | awk '{print $1}'`"
  good="`cat ~/eventing.good`"
  if [ "$current" != "$good" ]; then exit 0; fi
  current="`git ls-remote ssh://github.com/couchbase/eventing-ee $BRANCH | awk '{print $1}'`"
  good="`cat ~/eventing-ee.good`"
  if [ "$current" != "$good" ]; then exit 0; fi
done

